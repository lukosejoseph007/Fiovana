# AI Service Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =================================
# EMBEDDING CONFIGURATION (OPTIONAL - UI PREFERRED)
# =================================
# NOTE: Embedding configuration is now primarily done through the UI (Settings > Embeddings)
# These .env settings are kept as fallback/legacy support.
#
# RECOMMENDED: Configure embeddings through Settings UI instead of .env
#
# Legacy .env embedding providers:

# Option 1: OpenAI (Most reliable, higher cost ~$0.0001 per 1K tokens)
# OPENAI_API_KEY=sk-your-openai-api-key-here

# Option 2: OpenRouter (Cost-effective, good performance ~$0.00002 per 1K tokens)
# Use the same OPENROUTER_API_KEY as above

# Embedding Model Selection (for OpenRouter/OpenAI)
# Available OpenRouter embedding models:
# - text-embedding-ada-002 (OpenAI, 1536 dim, most reliable, ~$0.0001/1K tokens)
# - text-embedding-3-small (OpenAI, 1536 dim, newer, ~$0.00002/1K tokens)
# - text-embedding-3-large (OpenAI, 3072 dim, best quality, ~$0.00013/1K tokens)
EMBEDDING_MODEL=text-embedding-ada-002

# Embedding Performance Settings
EMBEDDING_BATCH_SIZE=50
EMBEDDING_TIMEOUT_SECONDS=60

# Development Configuration
RUST_LOG=info
TAURI_DEV_PORT=3000

# Database Configuration
DATABASE_URL=sqlite:./Fiovana.db

# Feature Flags
ENABLE_TELEMETRY=false
ENABLE_CLOUD_SYNC=false
ENABLE_COLLABORATION=false

# Vector Search Configuration
VECTOR_INDEX_PATH=./vector_index
MAX_EMBEDDING_BATCH_SIZE=100

# ========================================
# SECURITY CONFIGURATION (Production Hardened)
# ========================================

# Security Level (REQUIRED for production)
# Options: development, production, high_security
# Default: development
FIOVANA_SECURITY_LEVEL=development

# File Security Limits
# Maximum file size in bytes (default: 100MB for production)
FIOVANA_MAX_FILE_SIZE=104857600

# Maximum path length in characters (default: 260 for Windows compatibility)
FIOVANA_MAX_PATH_LENGTH=260

# Maximum concurrent file operations (default: 10 for production)
FIOVANA_MAX_CONCURRENT_OPERATIONS=10

# Critical Security Features (MUST BE TRUE IN PRODUCTION)
# Enable magic number validation for file type detection
FIOVANA_ENABLE_MAGIC_VALIDATION=true

# Enforce workspace boundaries to restrict file operations
FIOVANA_ENFORCE_WORKSPACE_BOUNDARIES=true

# Enable security audit logging
FIOVANA_AUDIT_LOGGING_ENABLED=true

# ========================================
# ADVANCED SECURITY OPTIONS (Optional)
# ========================================

# Content Security Scanning
FIOVANA_ENABLE_CONTENT_SCANNING=false

# Suspicious file age threshold in seconds (default: 300 = 5 minutes)
FIOVANA_SUSPICIOUS_FILE_AGE_THRESHOLD=300

# Rate Limiting (requests per minute)
FIOVANA_RATE_LIMIT_PER_MINUTE=60

# Configuration Validation Strictness
# Options: lenient, strict, paranoid
FIOVANA_CONFIG_VALIDATION=strict

# Performance Monitoring
FIOVANA_PERFORMANCE_MONITORING=false

# Compliance Framework
# Options: none, gdpr, hipaa, pci_dss
FIOVANA_COMPLIANCE_FRAMEWORK=none

# Data Classification Level
# Options: public, internal, confidential, restricted
FIOVANA_DATA_CLASSIFICATION=internal

# Audit Log Retention Period in days (default: 90)
FIOVANA_AUDIT_LOG_RETENTION_DAYS=90

# Security Alert Threshold (number of violations before alert)
FIOVANA_SECURITY_ALERT_THRESHOLD=10

# Security Alert Method
# Options: log, email, slack, webhook
FIOVANA_ALERT_METHOD=log

# ========================================
# ENVIRONMENT METADATA (Optional)
# ========================================

# Configuration version tracking
FIOVANA_CONFIG_VERSION=1.0.0

# Environment description for audit purposes
FIOVANA_ENVIRONMENT_DESCRIPTION="Development environment"

# Security review dates (update as needed)
FIOVANA_SECURITY_REVIEW_DATE=
FIOVANA_NEXT_SECURITY_REVIEW_DATE=
