# AI Service Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Development Configuration
RUST_LOG=info
TAURI_DEV_PORT=3000

# Database Configuration
DATABASE_URL=sqlite:./Proxemic.db

# Feature Flags
ENABLE_TELEMETRY=false
ENABLE_CLOUD_SYNC=false
ENABLE_COLLABORATION=false

# Vector Search Configuration
VECTOR_INDEX_PATH=./vector_index
MAX_EMBEDDING_BATCH_SIZE=25
MAX_CHUNKS_PER_DOCUMENT=25

# =================================
# EMBEDDING CONFIGURATION (OPENAI ONLY)
# =================================
# Use OpenAI's most cost-effective embedding model (5x cheaper!)
EMBEDDING_MODEL=text-embedding-3-small

# Optional: Reduce embedding dimensions for even more cost savings
# EMBEDDING_DIMENSIONS=512  # Uncomment to reduce from 1536 to 512 dimensions

# Conservative performance settings for stability
EMBEDDING_BATCH_SIZE=25
EMBEDDING_TIMEOUT_SECONDS=90

# Safety settings - NO LOCAL FALLBACK
DISABLE_LOCAL_EMBEDDINGS=true
REQUIRE_API_EMBEDDINGS=true

# ========================================
# SECURITY & PERFORMANCE (ENABLED FOR SAFETY)
# ========================================
# File size limit (50MB - reduced for safety)
PROXEMIC_MAX_FILE_SIZE=52428800

# Enable security features
PROXEMIC_ENABLE_MAGIC_VALIDATION=true
PROXEMIC_ENFORCE_WORKSPACE_BOUNDARIES=true

# Performance monitoring (helpful for debugging)
PROXEMIC_PERFORMANCE_MONITORING=true

# Additional safety limits
MAX_CONCURRENT_OPERATIONS=1
