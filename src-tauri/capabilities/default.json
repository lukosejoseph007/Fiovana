{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Fiovana minimal filesystem security - read-only access to user directories",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:webview:default",
    "core:path:default",
    "dialog:default",
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [{ "path": "$DOCUMENT/**" }, { "path": "$DESKTOP/**" }, { "path": "$DOWNLOAD/**" }]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [{ "path": "$DOCUMENT/**" }, { "path": "$DESKTOP/**" }, { "path": "$DOWNLOAD/**" }]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [{ "path": "$DOCUMENT/**" }, { "path": "$DESKTOP/**" }, { "path": "$DOWNLOAD/**" }]
    },
    {
      "identifier": "fs:allow-stat",
      "allow": [{ "path": "$DOCUMENT/**" }, { "path": "$DESKTOP/**" }, { "path": "$DOWNLOAD/**" }]
    }
  ]
}
